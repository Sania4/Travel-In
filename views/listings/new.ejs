<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <br><br>
    <h3>Create a New Listing!</h3>

    <form method="POST" action="/listings" 
    novalidate class="needs-validation" enctype="multipart/form-data"> 
        <!-- to add error to fields not filled. validation class is used -->

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" type="text" class="form-control" placeholder="Enter title" required>
            <div class="valid-feedback">Title looks good!</div>
        </div>
    
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" class="form-control" name="listing[description]" placeholder="Enter description" rows="5" cols="30" required></textarea>
            <div class="invalid-feedback">Please enter a short description</div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input type="file" class="form-control" name="listing[image]">
            required
        </div>
    
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input class="form-control" name="listing[price]" placeholder="Enter price" required>
            <div class="invalid-feedback">Price should be valid</div>
        </div>
    
        <div class="row">
            <div class="col-md-6">
                <label for="location" class="form-label">Location</label>
                <input type="text" class="form-control" name="listing[location]" placeholder="Enter location" required>
                <div class="invalid-feedback">Location should be valid</div>
            </div>
        
            <div class="mb-3 col-md-6">
                <label for="country" class="form-label">Country</label>
                <input type="text" class="form-control" name="listing[country]" placeholder="Enter country" required>
                <div class="invalid-feedback">Country should be valid</div>
            </div>
        </div>
            <button class="btn btn-dark add-btn mt-3">Add</button>
    </form>
</div>
</div>

